# Development Dockerfile with hot reload support
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libheif1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Set working directory
WORKDIR /app

# Copy project files
COPY pyproject.toml uv.lock ./

# Install dependencies using uv.lock as the source of truth (including dev packages)
RUN uv sync --dev

# Copy source code
COPY src/ ./src/
COPY tests/ ./tests/

# Set environment variables
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app/src"

# Development specific settings
ENV ENVIRONMENT=development
ENV STREAMLIT_SERVER_PORT=8501
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0
ENV STREAMLIT_SERVER_RUN_ON_SAVE=true

# Expose port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Start application with hot reload
CMD ["streamlit", "run", "src/imgstream/main.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.runOnSave=true"]
