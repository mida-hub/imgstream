# Bandit security scanner configuration

[bandit]
# Exclude test files and migrations
exclude_dirs = ["tests", "migrations", ".venv", "venv"]

# Skip specific tests
skips = [
    "B101",  # assert_used - Allow assert statements in tests
    "B601",  # paramiko_calls - Not using paramiko
    "B602",  # subprocess_popen_with_shell_equals_true - Controlled usage
]

# Confidence levels: LOW, MEDIUM, HIGH
confidence = "MEDIUM"

# Severity levels: LOW, MEDIUM, HIGH
severity = "MEDIUM"

# Output format: csv, json, txt, xml, yaml
format = "txt"

# Include test IDs in output
include_test_ids = true

# Recursive scan
recursive = true
